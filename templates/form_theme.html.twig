{% block stapling_rule_label %}{% endblock %}
{% block sign_rule_label %}{% endblock %}

{% block stapling_rule_widget %}
  <div
    class="row mb-1"
    {{ attr|map((value, key) => "#{key}=#{value}")|join(" ") }}
  >
    <div class="col">{{ form_widget(form.glueOperator) }}</div>
    <div class="col">{{ form_widget(form.metadata) }}</div>
    <div class="col">{{ form_widget(form.comparisonOperator) }}</div>
    <div class="col">{{ form_widget(form.value) }}</div>
  </div>
{% endblock %}

{% block sign_rule_widget %}
  <div
    class="row mb-1"
    {{ attr|map((value, key) => "#{key}=#{value}")|join(" ") }}
  >
    <div class="col">{{ form_widget(form.glueOperator) }}</div>
    <div class="col">{{ form_widget(form.metadata) }}</div>
    <div class="col">{{ form_widget(form.comparisonOperator) }}</div>
    <div class="col">{{ form_widget(form.value) }}</div>
    <div class="col">{{ form_widget(form.optional) }}</div>
  </div>
{% endblock %}